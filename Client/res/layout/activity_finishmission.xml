<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#65a1e7" >
    </FrameLayout>
    
    <ImageButton
        android:id="@+id/menuButton"
       android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
		android:background="@drawable/btn_menu"/>
    
    <TextView
        android:id="@+id/tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
		android:text="Mission Completed"/>

    <TextView
        android:id="@+id/type_Mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#f5789a"
        android:textSize="20sp"
        android:text="Pronouce mission" />
    
    <TextView
        android:id="@+id/finish_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type_Mission"
        android:layout_centerHorizontal="true"
        android:textColor="#9e9e9e"
        android:textSize="12sp"
        android:text="Finished at 14:21 JUN, 2015" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_toLeftOf="@id/type_Mission"
        android:layout_alignTop="@+id/type_Mission"
        android:layout_marginLeft="32dp"
        android:src="@drawable/ico_prono" />

    <GridView
        android:id="@+id/wordGrid"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/finish_at"
        android:background="@drawable/r_edittext"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:numColumns="3"
        android:layout_marginTop="10dp" >
    </GridView>
    
    <TextView
        android:id="@+id/rankTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordGrid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#65a1e7"
        android:textSize="15sp"
        android:text="Rank Mission" />
    
    <TextView
        android:id="@+id/myRankText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordGrid"
        android:layout_toLeftOf="@+id/myRankNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#445c68"
        android:textSize="15sp"
        android:text="My Rank" />
    
    <TextView
        android:id="@id/myRankNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wordGrid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#f5799b"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        
        android:text="20" />

    <ListView
        android:id="@+id/rankList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rankTitle"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/okButton"
        android:layout_marginBottom="10dp"
        android:background="@drawable/r_edittext"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" 
        android:padding="1dp">
    </ListView>
    
    <ImageButton 
        android:id="@id/okButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btn_ok_1_hou"
        android:layout_marginBottom="20dp"/>
    
    <ImageButton 
        android:id="@id/okButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_save_hou"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>