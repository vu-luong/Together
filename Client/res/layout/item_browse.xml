<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.together.multiplyfragmentdemo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ico_prono_browser_mission"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/itemTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/icon"
            android:text="Pronouce Words"
            android:textColor="#65a1e7"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/createByText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemTittle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/icon"
            android:text="Create By: "
            android:textColor="#4c626d"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemTittle"
            android:layout_toRightOf="@id/createByText"
            android:layout_marginTop="5dp"
            android:text="Vu Luong Anh"
            android:textColor="#f4789c"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/endDayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/icon"
            android:layout_alignParentBottom="true"
            android:text="Ended 2 days ago"
            android:textColor="#b5b5b5"
            android:textSize="13sp" />
        
        <ImageView
            android:id="@+id/joinButton"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_join1"
            android:layout_marginBottom="5dp"/>
        
        <TextView
            android:id="@+id/idText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4c626d"
            android:textSize="15sp" 
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:text="ID: 2015"/>
        
    </RelativeLayout>

</LinearLayout>